@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model dotnet01.Areas.Admin.Models.AccountIndexViewModel
@using dotnet01.Areas.Helpers
<br />
<div class="panel panel-default">
    <div class="panel-heading">
        Аккаунты
        
    </div>
    <div class="panel-body">
        @Html.ActionLink("Добавить", "New", new { }, new { @class = "btn btn-info" })
    </div>
    <table class="table table-striped">
        <tr>
            <th>Логин</th>
            <th>Пароль</th>
            <th></th>
        </tr>
        @foreach (var item in Model.Accounts)
        {
            <tr>
                <td width="33%">@item.Login</td>
                <td width="33%">@item.Password</td>
                <td width="33%">
                    <div class="btn-group">
                        @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }, new { @class="btn btn-default" })
                        @Html.ActionLink("Детали", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                    </div>
                </td>
            </tr>
        }
    </table>
    <div class="panel-footer">
        <nav>
            <ul class="pagination pagination-sm">
                @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { page = x }))
            </ul>
        </nav>
    </div>
</div>

<br />
