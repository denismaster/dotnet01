@model Courses.ViewModels.ProductWithAllCategorysViewModel

@{
    ViewBag.Title = "EditProductCategorys";
}
<br />
<div class="panel panel-default">
    <div class="panel-heading">
        Курс № @Model.Id - @Model.Name
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="panel-body">
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.Name)
           
            Категории: 
            <br><br>
            @foreach (Courses.ViewModels.CategoryViewModel c in Model.AllCategorys)
            {
                <input type="checkbox" name="selectedCategorys" value="@c.Id" 
                       @( (Model.SelectedCategorys != null && Model.SelectedCategorys.Contains(c)) ? "checked=\"checked\"" : "") />@c.Name <br />
            }
       </div>
       <br>
       <div class=" panel-footer">
           @Html.ActionLink("Назад к детальной информации", "Details", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-warning" })
           <input type="submit" value="Сохранить" class="btn btn-success" />
       </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
