@model Courses.ViewModels.ProductCategoryViewModel

@{
    ViewBag.Title = "EditProductCategorys";
}
<br />
<div class="panel panel-default">
    <div class="panel-heading">
        Курс № @Model.Id - @Model.Name
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="panel-body">
            <br>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.Name)
            @*@Html.HiddenFor(m => m.SelectedCategorys)
            @Html.HiddenFor(m => m.AllCategorys)*@
           
           
                @Html.LabelFor(model => model.SelectedCategorys, htmlAttributes: new { @class = "control-label col-md-2" })
                <br>
                @foreach (Courses.ViewModels.CategoryViewModel c in Model.AllCategorys)
                {
                    <input type="checkbox" name="selectedCategorys" value="@c.Id"
                           @( (Model.SelectedCategorys != null && Model.SelectedCategorys.Contains(c)) ? "checked=\"checked\"" : "") />@c.Name <br />
                }


        </div>
        <br>
        <div class=" panel-footer">
            @Html.ActionLink("Назад к списку", "Index", new { }, htmlAttributes: new { @class = "btn btn-warning" })
            <input type="submit" value="Сохранить" class="btn btn-success" />
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
