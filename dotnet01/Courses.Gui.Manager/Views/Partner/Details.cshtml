                    foreach (Courses.ViewModels.CategoryViewModel c in Model.Categorys)
                    {
                        <li>@c.Name</li>
                    }

                }
            </ul>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index", new { }, htmlAttributes: new { @class = "btn btn-warning" })
