@model Courses.ViewModels.AccountViewModel

@{
    ViewBag.Title = "Delete";
}
<br />
<div class="panel panel-danger">
    <div class="panel-heading">
        Удаление аккаунта №@Model.Id
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="panel-body">
            @Html.ValidationSummary(true, "", new { @class = "alert-danger" })
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                <label>Имя пользователя</label>
                @Html.TextBoxFor(m => m.Login, new { @class = "form-control", disabled = "disabled" })
            </div>
            <div class="form-group">
                <label>Адрес электронной почты</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control",disabled="disabled" })
            </div>
            <div class="form-group">
                <label>Пароль</label>
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", disabled = "disabled" })
            </div>
            <div class="form-group">
                <label>Роль</label>
                @Html.TextBoxFor(m => m.Role, new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>
        <div class="panel-footer">
            @Html.ActionLink("Назад к списку", "Index", new { }, new { @class = "btn btn-default" })
            <input type="submit" value="Удалить" class="btn btn-danger" />
        </div>
    }
</div>
