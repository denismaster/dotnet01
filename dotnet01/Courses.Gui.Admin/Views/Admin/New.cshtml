@model Courses.ViewModels.AccountViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="panel panel-default">
    <div class=" panel-heading">
        Добавление аккаунта 
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class=" panel-body">
            @Html.ValidationSummary(true, "", new { @class = "alert-danger" })
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                <label>Логин*</label>
                @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Login)
            </div>
            <div class="form-group">
                <label>Пароль*</label>
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="form-group">
                <label>Адрес электронной почты</label>
                @Html.TextBoxFor(m => m.Mail, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Mail)
            </div>
            <div class="form-group">
                <label>Роль</label>
                @Html.TextBoxFor(m => m.Role, new { @class = "form-control" })
            </div>
        </div>
        <div class=" panel-footer">
            @Html.ActionLink("Назад к списку", "Index", new { @class = "btn btn-default" })
            <input type="submit" value="Сохранить" class="btn btn-primary" />
        </div>
    }
</div>
