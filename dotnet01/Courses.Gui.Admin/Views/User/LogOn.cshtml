@model Courses.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="panel panel-default">
    <div class="panel-heading">Аутентификация</div>
    @using (@Html.BeginForm())
    {
        <div class="panel-body">
            @Html.ValidationSummary(true, "Аутентификация прошла неудачно. Исправьте ошибки и попробуйте снова.", new { @class="alert alert-danger",role="alert"})
            <div class="form-group">
                <label for="Departure">Логин</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="Destination">Пароль</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control"})
            </div>
        </div>
        <div class="panel-footer">
            <input type="submit" value="Войти" class="btn btn-primary" />
        </div>
    }
</div>
