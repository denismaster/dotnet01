@{
    ViewBag.Title = "Spa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/Content/kendo.common.min.css" rel="stylesheet" />
<link href="~/Content/kendo.bootstrap.min.css" rel="stylesheet" />
<script src="@Url.Content("~/scripts/require.js")" data-main="/scripts/app/main"> </script>

<div id="app"></div>

<div class="container">
    <div id="courseGrid"></div>
</div>
<script>
    $(document).ready(function() {

        var products = [{"Name":"first", "Description":"first product"}]

        var dataTest = new kendo.data.DataSource({
            data:products
        })

        var grid = $("#courseGrid"),
            dataSrc = new kendo.data.DataSource({
                serverPaging: true,
                serverSorting: true,
                serverFiltering: true,
                pageSize: 10,
                type: 'aspnetmvc-ajax',
                transport: {
                    read: {
                        dataType: 'json',
                        url: '/api/Product',
                    }
                },
                schema: {
                    model: {
                        id: "Id",
                        fields: {
                            Name: "Name",
                            Description: "Description",
                        }
                    },
                },
            });

        grid.kendoGrid({
            sortable: true,
            reorderable: true,
            resizable: true,
            pageable: true,
            filterable: true,
            autoBind: true,
            customBinding: true,
            columns: [
				{
					title: "Name",
					field: "Name",
					width: 50
				},
                {
                    title: "Description",
                    field: "Description",
                    width: 50
                },
            ],
            dataSource: dataSrc
        });

    });
</script>