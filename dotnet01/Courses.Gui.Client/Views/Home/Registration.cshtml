<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <title>Регистрация</title>
    @model Courses.Gui.Client.Models.RegisterViewModel
    @{
    }
</head>
<body>

    <div class="row">

        <div class="col-md-3 col-md-offset-5 registr">
            <h2 id="create-acc">Создание аккаунта</h2>
            <div class="row">
                <div class="col-md-offset-4">
                    <img src="~/Content/images/person.png">
                </div>
            </div>
            
@using (Html.BeginForm("Registration", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <label>E-mail*</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
                <hr />
                <h6>Если Вы заполните данные поля, мы сможем подобрать наиболее интересные предложения для Вас</h6>
                <div class="form-group">
                    <label>Фамилия</label>
                    <input type="text" class="form-control" id="usr">
                </div>
                <div class="form-group">
                    <label>Имя</label>
                    <input type="text" class="form-control" id="usr">
                </div>
                <div class="form-group">
                    <label>Телефон</label>
                    <input type="text" class="form-control" id="usr">
                </div>
                <div class="form-group">
                    <label>Пол</label>
                    <input type="text" class="form-control" id="usr">
                </div>
                <div class="form-group">
                    <label>Дата рождения</label>
                    <input type="text" class="form-control" id="usr">
                </div>
                <div class="form-group">
                    <label>Грод</label>
                    @Html.TextBoxFor(m => m.Hometown, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <hr />
                    <label>Пароль*</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <hr />
                    <label>Повторите пароль*</label>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
                <div class="col-md-offset-4">
                    <input type="submit" class="btn" value="Регистрация" />
                </div>
}
        </div>
    </div>

</body>
</html>