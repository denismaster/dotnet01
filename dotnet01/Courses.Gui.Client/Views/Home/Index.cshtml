
<link rel="stylesheet" href="~/Content/app/index-list-style.css">
<script src="~/Scripts/app/viewModels/home/index-listView.js"></script>


<div class="index"> 

    <div class="container-fluid">
        <div class="row" id="search-row">
            <div class="input-group input-group-lg" id="search-input-group">
                <span class="input-group-addon" id="basic-addon1" style="border-radius:0px"><span class="glyphicon glyphicon-search"></span></span>
                <input id="search" type="text" style="border-radius:0px" class="form-control" placeholder="Поиск по названию" aria-describedby="basic-addon1">
            </div>
            
        </div>
        <div class="row">
            <div class="col-lg-3">
                <div id="categories-wrapper">
                    <div id="treelist">
                        <script id="tree-template" type="text/x-kendo-template">
                            <div class="employee-name">#: Name #</div>
                        </script>
                    </div>
                </div>
                
            </div>
            <div class="col-lg-9">
                <div id="example">
                    <div class="demo-section k-content wide">
                        <div id="toolbar"></div>
                    </div>
                </div>
                <div class="demo-section k-content wide">
                    <div id="listView"></div>
                    <div id="pager" class="k-pager-wrap"></div>
                </div>
                <script type="text/x-kendo-template" id="template">
                    <div class="product">
                        <img src="data:image/png;base64,${Image}" alt="#: Name # image" />

                        <h3>#:Name#</h3>
                        <p>
                            <br>Подробнее... <br>
                            <button class="btn btn-info" type="button" id="buyButton" data-id="#: Id#" onclick="BasketButtonEventListener">Купить</button>
                        </p>

                    </div>
                </script>
            </div>
        </div>
    </div>
 
        
</div>


<div class="product-details">
        <div class="panel panel-default">
            <div class="panel-heading">
                <label data-bind="text:nameValue"></label>
                <button type="button" class="btn btn-lg" id="backButton"><span class="glyphicon glyphicon-remove"></span></button>
            </div>
            <div class="panel-body">
                <div class="container-fluid">
                <div class="row">
                    <div id="img-box">
                        <div class="form-group">
                            <img data-bind="attr: { src: photoAsBase64 }" />
                        </div>
                        <div class="form-group"id="activityLabel">
                            <br /><label><span data-bind="text: activeValue" class="label label-danger"></span></label>
                        </div>
                    </div>
                <div id="short-info">
                    <div class="form-group">
                        <blockquote>
                            <h4><label> Тип мероприятия </label></h4>
                            <p><label data-bind="text:typeValue"></label></p>
                        </blockquote>
                    </div>
                    <div class="form-group">
                        <blockquote>
                            <h4><label> Доступных мест</label></h4>
                            <p><label data-bind="text:seatsCountValue"></label></p>
                        </blockquote>
                    </div>
                    <div class="form-group">
                        <blockquote>
                            <h4><label> Место проведения</label></h4>
                            <p><label data-bind="text:locationValue"></label></p>
                        </blockquote>
                    </div>
                    <div class="form-group">
                        <blockquote>
                            <h4><label> Преподаватель</label></h4>
                            <p><label data-bind="text:teacherValue"></label></p>
                        </blockquote>
                    </div>
                    <div class="form-group">
                        <blockquote>
                            <h4><label> Ответственный менеджер</label></h4>
                            <p><label data-bind="text:managerValue"></label></p>
                        </blockquote>
                    </div>
                    <button class="btn btn-success" type="button" id="buyButton" data-id="#: Id#" onclick="BasketButtonEventListener">Купить</button>
                </div>
                    </div>
                <div class="row">
                <div class="form-group">
                    <div class="panel panel-default">
                        <div class="panel-heading">Описание</div>
                        <div class="panel-body">
                            <label data-bind="text:descriptionValue"></label>
                        </div>
                    </div>
                </div>
                    </div>
                </div>
            </div>
        </div>
    
</div>

@Scripts.Render("~/bundles/basket")

