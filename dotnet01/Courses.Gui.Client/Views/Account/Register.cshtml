@model Courses.Gui.Client.Models.RegisterViewModel
@{
    Layout = "~/Views/Account/_Account.cshtml";
}
@Styles.Render("~/Content/CSS/register.css");
<title>Регистрация</title>
<body>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-4 col-md-offset-3 registr">
                <h2>Создание аккаунта</h2>
                <div class="row">
                    <div class="col-md-offset-4">
                        <img src="~/Content/images/person.png">
                    </div>
                    </div>
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.Label("Логин*", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id="reg-form"})
                        </div>
                        </div>
                <div class="form-group">
                    @Html.Label("Город", new { @class = "col-md-3 control-label " })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Hometown, new { @class = "form-control",id = "reg-form" })
                    </div>
                </div>
                    <div class="form-group">
                        @Html.Label("Пароль*", new { @class = "col-md-3 control-label" })
                        <div class="col-md-8">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control",id="reg-form" })
                        </div>
                        </div>
                        <div class="form-group">
                            <label class = "col-md-3 control-label">Повторите <br />  пароль</label>
                            <div class="col-md-8">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control",id="reg-form" })
                            </div>
                        </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-md-8">
                            <input type="submit" id="reg" class="btn btn-default" value="Зарегестрироваться" />
                        </div>
                    </div>
                </div>
                </div>
            

                }
    </body>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
